html
  head
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/@tailwindcss/ui@latest/dist/tailwind-ui.min.css')
    body(class='bg-grey-lighter text-base text-grey-darkest font-normal relative bg-gray-100')
      div(class='bg-gray-900 p-2 flex justify-between items-center')
        div(class="flex items-center")
            a(href="/" class='inline-block p-3 text-gray-400 mr-2 hover:text-gray-100 hover:text-gray-100 transform hover:scale-110 transition ease-in-out duration 300') Home
        div(class="flex items-center")
            a(href="/login" class="inline-block p-2 text-gray-400 mr-2 rounded hover:text-gray-100 transform hover:scale-110 transition ease-in-out duration 300") Login
            a(href="/register" class="inline-block p-2 bg-gray-400 text-black rounded hover:text-gray-100 transform hover:scale-110 transition ease-in-out duration 300") Sign Up

    div(class='container mx-auto mt-4 items-center py-4')
        header
            div(class="relative z-40 mx-auto flex-wrap rounded shadow-lg bg-gray-900 flex py-5")
                h3(class="text-lg leading-5 text-gray-300 ml-4") Event details
                    
        div(class='-mt-6 releative z-10 mx-auto flex-wrap bg-gray-50 rounded shadow-lg p-8')
            form(action='/add-events' method='POST' class='bg-gray-lightest px-10 py-10')   
                div(class="mb-2 flex gap-10 grid grid-cols-2 divide-x-reverse")
                    div
                        label(class='flex block mb-1 font-semibold') Title:
                        label(class="outline-none placeholder-gray-400 flex justify-center border border border-black w-full p-3 focus:{outline-none border:5px solid #555} text-black font-semibold focus:outline-black outline:border-black rounded-lg" )=event.title
                    div(class="justify-end")
                        lable(class='flex block mb-1 font-semibold') Org./Co. Name:
                        label(class="placeholder-gray-400 flex justify-center border border border-black w-full p-3 focus:{outline-none border:5px solid #555} text-black font-semibold focus:outline-black outline:border-black rounded-lg")=event.orgname
                div(classname='form-group')
                    label(class='block mb-1 font-semibold') Decription:
                    label(class="font-semibold resize-none outline-none rounded-xl flex justify-center border border border-black w-full p-3 focus:{outline-none border:5px solid #555} text-black font-semibold focus:outline-black outline:border-black rounded-lg")=event.description
                div(class="mt-2 mb-2 flex grid grid-cols-2 divide-x-reverse divide-gray-500")
                        div(class="flex-1")
                            label(class='block mb-1 font-semibold') When:(fix)
                            label( class='flex' type="datetime-local" placeholder='Enter event date (mm/dd/yyyy)'  body='')=event.time
                        div(class="flex-1 justify-end")
                            label(class='flex block mb-1 font-semibold') Where:
                            label(class='outline-none placeholder-gray-400 flex justify-center border border border-black w-full p-3 text-black font-semibold focus:outline-gray-700 outline:border-black focus:outline-black rounded-lg')=event.place
                            div(class="flex mb-2 grid grid-cols-1 divide-x-reverse")
                div(class="flex justify-end")
                        label(class="ml-64 flex block justify-center border border border-black ml-8 mt-4 mb-2 p-3 focus:{outline-none border:5px solid #555} text-black font-semibold focus:outline-black outline:border-black rounded-lg")="Signatures: "+event.signtures
                div(class="flex justify-between mb-2 grid grid-cols-2 divide-x-reverse")
                            a(href="/login" class="flex block justify-center text-center w-16 mt-4 mb-2 bg-transparent transform hover:scale-110 transition ease-in-out duration 300 hover:bg-black text-black font-semibold hover:text-white py-2 px-2 border border-black hover:border-transparent rounded-lg transition ease-in-out duration-300") Sign
                            a(href="/login" class="flex block justify-center text-center  w-16 -ml-5/6 mt-4 mb-2 bg-transparent transform hover:scale-110 transition ease-in-out duration 300 hover:bg-black text-black font-semibold hover:text-white py-2 px-2 border border-black hover:border-transparent rounded-lg transition ease-in-out duration-300") Report
